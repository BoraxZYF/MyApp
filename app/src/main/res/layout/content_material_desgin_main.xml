<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_material_desgin_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.borax.myapp.activity.materialdesign.MaterialDesginMainActivity"
    tools:showIn="@layout/activity_material_desgin_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="200dp">

            <Button
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="有界波纹" />

            <Button
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="无界波纹" />

            <Button
                android:id="@+id/button"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_ripple_bg"
                android:text="自定义样式"
                android:textColor="#FFFFFF"
                android:transitionName="button" />

            <Button
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_ripple_nochild_bg"
                android:text="自定义样式"
                android:textColor="#000000" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="揭露效果" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic1"
                android:transitionName="image" />

            <Button
                android:id="@+id/imagebutton"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="?android:attr/selectableItemBackground" />

            <Button
                android:id="@+id/recyclerview_button"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="RecyclerView"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/pathinterpolator_button"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="PathInterpolator"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edittext"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:entries="@array/languages"></android.support.v7.widget.AppCompatSpinner>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="CheckBox" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="RadioButton1" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="RadioButton2" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="RadioButton3" />

            </RadioGroup>

            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <CheckedTextView
                android:layout_width="280dp"
                android:layout_height="50dp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
