<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.borax.myapp.activity.sainti.radio.UploadRadioActivity"
    tools:showIn="@layout/activity_upload_radio">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <RelativeLayout
        android:id="@+id/waverl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF">

            <com.borax.myapp.activity.sainti.radio.WaveView
                android:id="@+id/wave"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:layout_centerInParent="true" />

            <Button
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/voice_selector" />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
